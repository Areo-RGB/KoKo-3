{
  "workspaces": {
    ".": {
      "entry": [
        "app/**/*.tsx",
        "app/**/*.ts",
        "components/**/*.tsx",
        "lib/**/*.ts",
        "util/**/*.ts",
        "hooks/**/*.ts"
      ],
      "project": ["**/*.ts", "**/*.tsx", "**/*.js"],
      "ignore": [
        "public/**",
        ".next/**",
        "out/**",
        "node_modules/**",
        "docs/examples/**"
      ],
      "ignoreBinaries": ["claude", "qwen"],
      "ignoreDependencies": [
        "postcss-load-config",
        "tailwindcss-animate",
        "eslint-config-next",
        "sharp",
        "tailwindcss",
        "ts-node"
      ]
    }
  },
  "rules": {
    "files": "error",
    "dependencies": "error",
    "unlisted": "warn",
    "exports": "error",
    "types": "error",
    "duplicates": "error"
  }
}
